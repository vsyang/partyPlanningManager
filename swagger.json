    "/food/dish/{dishId}": {
      "put": {
        "tags": [
          "Food"
        ],
        "description": "Update an existing dish by its ID.",
        "parameters": [
          {
            "name": "dishId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB ObjectId of the dish"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Updated Potato Salad"
                },
                "categoryId": {
                  "type": "string",
                  "example": "side"
                },
                "participantId": {
                  "type": "string",
                  "example": "eric"
                },
                "description": {
                  "type": "string",
                  "example": "Less mayo, more mustard"
                },
                "serves": {
                  "type": "number",
                  "example": 8
                },
                "isVegetarian": {
                  "type": "boolean",
                  "example": true
                },
                "isGlutenFree": {
                  "type": "boolean",
                  "example": false
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dish updated successfully"
          },
          "400": {
            "description": "Invalid dish id"
          },
          "404": {
            "description": "Dish not found"
          },
          "412": {
            "description": "Validation failed (see saveDish middleware rules)"
          },
          "500": {
            "description": "Server error while updating dish"
          }
        }
